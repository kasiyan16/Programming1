#include <iostream>
using namespace std;
int main()
{
	double l1;
	l1 = 1.5 * 0.25;//переводим кожне за масштабом
	double l2;
	l2 = 2.3 * 0.25;
	double l3;
	l3 = 5.9 * 0.25;
	double l4;
	l4 = 4 * 0.25;
	cout << "Відстань пройдена від домівки до музею " << l1 << "km" << endl;
	cout << "Відстань пройдена між музеєм і картинною галереєю " << l2 << "km" << endl;
	cout << "Відстань пройдена між картинною галереєю i book shop " << l3 << "km" << endl;
	cout << "Відстань пройдена між book shop і концертом " << l4 << "km" << endl;
	float l5;
	l5 = l1 + l2 + l3 + l4;

	float all_road = float(int(l5 * 10 + 0.5)) / 10.0; // заукруглюєм до десятих

	cout << "Весь пройдений шлях " << all_road << "km" << endl;
	return 0;
}
